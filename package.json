{
  "name": "iec-converter",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "IEC 61131-3 Structured Text Code Generator from Natural Language",
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently -n \"frontend,sync,backend\" -c \"cyan,yellow,green\" \"vite\" \"cd backend && ..\\venv\\Scripts\\python fetchvariables.py\" \"cd backend && ..\\venv\\Scripts\\python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000\"",
    "dev:frontend": "vite",
    "dev:backend": "cd backend && ..\\venv\\Scripts\\python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "sync:variables": "cd backend && ..\\venv\\Scripts\\python fetchvariables.py",
    "build": "vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.1.12",
    "vite": "^7.1.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
