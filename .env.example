# IEC 61131-3 Code Generator - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# FRONTEND CONFIGURATION (Vite)
# ===========================================

# Backend API URL (optional, defaults to http://127.0.0.1:8000)
VITE_API_URL=http://127.0.0.1:8000


# ===========================================
# BACKEND CONFIGURATION
# ===========================================

# MongoDB Connection URI (REQUIRED)
# Replace with your MongoDB Atlas connection string or local MongoDB URI
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp

# Database name (optional, defaults to iec_code_generator)
DB_NAME=iec_code_generator

# Collection name (optional, defaults to variables)
COLLECTION_NAME=variables

# CORS Allowed Origins (comma-separated, optional)
# In production, restrict this to your frontend domain
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173


# ===========================================
# AI/LLM CONFIGURATION
# ===========================================

# Groq API Key (REQUIRED)
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Alternative API keys (optional, for fallback)
GROQ_API_KEY2=
GROQ_API_KEY3=

# Model name (optional, defaults to llama-3.1-70b-versatile)
GROQ_MODEL_NAME=llama-3.1-70b-versatile

# RAG retriever k value (optional, defaults to 3)
RAG_K=3
